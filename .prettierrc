{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.tsx",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
